@inherits System.Web.Mvc.WebViewPage
@{
    ViewBag.Title = "Payment Component";
}

@*Payment Component Window*@
<div id="nwPayComp" nwTitle="Payment Component" class="nkPopupCon">
<div class="nk-toolbar-c">
    <div class="nk-toolbar-btn">
        <div id="btnApplyToOneLocSave" class="btn-tb-action btn-btnApplyToOneLocSave">
            <div class="_icon"></div>
            <div class="_lbl">Save</div>
        </div>
    </div>
</div>
<div class="container-flex">
    <div class="row row-parent">
        <div class="col col-6 col-parent margin-top-10">
            <div class="row with-label-lookup">
                <div class="col col-4">
                    <label class="lbltxt">Payment Category</label>
                </div>
                <div class="col col-8 col-parent adisabled lookups" id="lugPayCateg">
                    <div class="col col-4 conval">
                        <input type="text" name="" class="txtbox idval">
                    </div>
                    <div class="col col-8 conval">
                        <input type="text" name="" class="txtbox txtdesc txtlookup descval">
                        <div class="btn btn-sm-default btn-sm-default-lookup"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-6 col-parent">
            <input type="text" name="" class="txtbox nwHide" id="txtSuppCode" maxlength="180">
            <input type="text" name="" class="txtbox nwHide" id="txtpayCateg" maxlength="180">
            <input type="text" name="" class="txtbox nwHide" id="txtpayTerm" maxlength="180">
        </div>
    </div>

    <div class="row row-parent padding-10">
        <div class="col col-12 col-parent">
            <div class="fullwidth" id="nwGridConPayComp"> </div>
        </div>
    </div>
</div>
</div>
@inherits System.Web.Mvc.WebViewPage
@{
    ViewBag.Title = "AP Debit Memo Entry";
}


@*Debit note with reference*@
<div id="nwGenerateGriddebitwith" @*title="Debit Note with Reference"*@ class="nkPopupCon">
    <div class="nk-container-flex padding-10">
        <div class="row-parent">
            <div class="col col-12 col-parent">
                <div class="row">
                    <div class="col col-6">
                        <div class="row">
                            <input id="txtTagPC" type="text" name="" class="txtbox hide">
                            <div class="col col-6">
                                <div class="row">
                                    <div class="col col-4">
                                        <label class="lbltxt">Total APV Amount<span class="nwRequiredField"></span></label>
                                    </div>
                                    <div class="col col-8">
                                        <input id="txtTotalAPVAmount" type="text" name="" class="txtbox">
                                    </div>
                                </div>
                            </div>
                            <div class="col col-6">
                                <div class="row">
                                    <div class="col col-4">
                                        <label class="lbltxt">Total Open Amount<span class="nwRequiredField"></span></label>
                                    </div>
                                    <div class="col col-8">
                                        <input id="txtTotalOpenAmount" type="text" name="" class="txtbox">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col col-6"> </div>
                </div>
            </div>
        </div>
        <div class="row-parent">
            <div class="col col-12">
                <div id="nwGridDebitNoteWithRefereceCon" class="fullwidth"></div>
            </div>
        </div>
    </div>
</div>

@*Details of debit note with reference*@
<div id="nwGenerateDetails" @*title="Remarks"*@ class="nkPopupCon">
    <div class="nk-container-flex padding-10">
        <div class="row-parent">
            <div class="col col-12 col-parent">
                <div class="row">
                    <div class="col col-6">
                        <div class="row">
                            <div class="col col-4">
                                <label class="lbltxt">APV Date<span class="nwRequiredField"></span></label>
                            </div>
                            <div class="col col-8">
                                <input id="APVDate" type="text" name="" class="txtbox nwUpper nwNoSpace nwCode">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-4">
                                <label class="lbltxt">APV No.<span class="nwRequiredField"></span></label>
                            </div>
                            <div class="col col-8">
                                <input id="APVNo" type="text" name="" class="txtbox idval" maxlength="80">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-4">
                                <label class="lbltxt">APV AMount<span class="nwRequiredField"></span></label>
                            </div>
                            <div class="col col-8">
                                <input id="APVAmount" type="text" name="" class="txtbox idval" maxlength="80">
                            </div>
                        </div>
                    </div>
                    <div class="col col-6"> </div>
                </div>
            </div>
        </div>
        <div class="row-parent">
            <div class="col col-12 col-parent">
                <div id="nwGridDebitNoteWithRefereceDetailsCon" class="fullwidth"></div>
            </div>
        </div>
    </div>
</div>


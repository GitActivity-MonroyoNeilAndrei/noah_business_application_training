@inherits System.Web.Mvc.WebViewPage
@{
    ViewBag.Title = "Payment Term Options";
    Layout = NoahWebLib.nwSystem.GetDefaultLayout();
}

<head>
    <script src="~/SB/DataSetup/SBPaymentTermOptions/SBPaymentTermOptions.js"></script>
    <link href="~/SB/DataSetup/SBPaymentTermOptions/SBPaymentTermOptions.css" rel="stylesheet" />
</head>

<div id="noah-webui-Toolbox" class="nk-toolbar-c">
            <div id="noah-webui-default-Print" class="btn-tb-action btn-tb-print">
                <div class="_icon"></div>
                <div class="_lbl">Print</div>
            </div>
        </div>

<div class="nwHide">
    
</div>

<div class="container-flex">

    <div class="row row-parent padding-10">
        <div class="col col-6 col-parent">
            @*Standard Term*@
            <div class="row">
                <div class="col col-4">
                    <label class="lbltxt">Standard Term</label>
                </div>

                <div class="col col-8">
                    <input id="txtStandardTerm" disabled type="text" name="" class="txtbox">
                </div>
            </div> 
            

            @*Payment Term Group*@
            <div class="row">
                <div class="col col-4">
                    <label class="lbltxt">Payment Term Group</label>
                </div>

                <div class="col col-8">

                    <div class="tabs tabs-lbl-bold" nk-tabs-style="4">
                        @*<hr>*@
                        <div class="tabs-content">
                            <input id="lugPaymentTerm" type="radio" class="tabs-rdb" checked="" name="tabs-f">
                            <label for="lugPaymentTerm" class="tabs-lbl">Payment Term</label>
                            <div class="tabs-text">
                                <div class="row">
                                    <div class="col col-12 col-parent">
                                        <div class="row">
                                            <div class="col col-12">
                                                <div class="btn-action-tab btn-add-list" >
                                                    <div class="_btn-icon"></div>
                                                    <div class="_lbl-txt">Add to list</div>
                                                </div>
                                                <div class="btn-action-tab btn-del-list" >
                                                    <div class="_btn-icon"></div>
                                                    <div class="_lbl-txt">Clear list</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col col-12">
                                                <div class="nkTab-container _tab-container"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
                </div> 

            </div>

        <div class="col col-6 col-parent">

            
        </div>

    </div>

</div>

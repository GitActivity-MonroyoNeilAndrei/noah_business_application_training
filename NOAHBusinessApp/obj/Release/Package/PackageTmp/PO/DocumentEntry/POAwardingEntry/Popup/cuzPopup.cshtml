@inherits System.Web.Mvc.WebViewPage
@{
    ViewBag.Title = "PO Awarding Entry";
}


  <div id="ApplyOneVendor" title="Apply to One Vendor/Order Type" class="container">
    <div class="nk-toolbar-c">
        <div class="nk-toolbar-btn">
            <div id="btnProcess_AOV" class="btn-tb-action btn-tb-process">
                <div class="_icon"></div>
                <div class="_lbl">Process</div>
            </div>
        </div>
    </div>

    <div class="container-flex padding-10">
        <div class="row row-parent">


            <div class="row">
                <div class="col col-4">
                    <label class="lbltxt">Vendor<span class="nwOptionalField">*</span></label>
                </div>
                <div class="col col-8 col-parent  lookups " id="lugVendor_AOV">
                    <div class="col col-4 conval">
                        <input type="text" name="" class="txtbox idval lookupcodecss clrtxt">
                    </div>
                    <div class="col col-8 conval">
                        <input type="text" name="" class="txtbox descval txtdesc clrtxt">
                        <div class="btn btn-sm-default btn-sm-default-lookup LookUp"></div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col col-4">
                    <label class="lbltxt">Vendor TIN</label>
                </div>
                <div class="col col-8">
                    <input id="txtVendorTIN_AOV" type="text" maxlength="30" class="txtbox" />
                </div>
            </div>

            <div class="row">
                <div class="col col-4">
                    <label class="lbltxt">Vendor Address</label>
                </div>
                <div class="col col-8">
                    <textarea id="txtVendorAddress" maxlength="500" class="txtarea autoresize" rows="5" cols="50"></textarea>
                </div>
            </div>

            <div class="row">
                <div class="col col-4">
                    <label class="lbltxt">Order Type<span class="nwOptionalField">*</span></label>
                </div>
                <div class="col col-8 col-parent  lookups " id="lugOrderType_AOV">
                    <div class="col col-4 conval">
                        <input type="text" name="" class="txtbox idval lookupcodecss clrtxt">
                    </div>
                    <div class="col col-8 conval">
                        <input type="text" name="" class="txtbox descval txtdesc clrtxt">
                        <div class="btn btn-sm-default btn-sm-default-lookup LookUp"></div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

      

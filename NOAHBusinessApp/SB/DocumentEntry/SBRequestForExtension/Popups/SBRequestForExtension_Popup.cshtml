@inherits System.Web.Mvc.WebViewPage
@{
    ViewBag.Title = "Request for Extension Entry";
}
<div id="popup" class="modal-s">
    <div class="modal-box-s" style="min-height: 50% !important; height: 50%; min-width: 85% !important; width: 70% !important;">
        <div class="modal-box-bg"></div>
        <div class="modal-hdr">
            <div class="btn btn-modal-back" nk-fx-click="press" title="Back"><span></span></div>
            <div class="modal-hdr-title">Request for Extension Entry</div>
            <div class="btn btn-modal-rescale-s" nk-fx-click="press" title="Rescale"></div>
        </div>

        <div class="nk-modal-body">

            @*ToolBox*@
            <div id="noah-webui-Toolbox" class="nk-toolbar-c">
                <div id="btnSave" class="btn-tb-action btn-tb-save">
                    <div class="_icon"></div>
                    <div class="_lbl">Save</div>
                </div>
                <div id="btnDelete" class="btn-tb-action btn-tb-delete">
                    <div class="_icon"></div>
                    <div class="_lbl">Delete</div>
                </div>
                <div id="btnRefresh" class="btn-tb-action btn-tb-refresh">
                    <div class="_icon"></div>
                    <div class="_lbl">Refresh</div>
                </div>
                <div id="btnProcess" class="btn-tb-action btn-tb-process">
                    <div class="_icon"></div>
                    <div class="_lbl">Process</div>
                </div>
            </div>

            <br />
          
            <div class="row row-parent padding-10">
                <div class="col col-12 col-parent">

                    <div class="col col-6">

                        <div class="row">
                            <div class="col col-5">
                                <label class="lbltxt">Location with Accountable Forms</label>
                            </div>
                            <div id="lugLocform" class="col col-7 col-parent lookups">
                                <div class="col col-5">
                                    <input type="text" name="" class="txtbox idval clr">
                                </div>
                                <div class="col col-7">
                                    <input type="text" name="" class="txtbox descval clr">
                                    <div class="btn btn-sm-default btn-sm-default-lookup"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-5">
                                <label class="lbltxt">Reason for Extension</label>
                            </div>
                            <div id="lugReason" class="col col-7 col-parent lookups">
                                <div class="col col-5">
                                    <input type="text" name="" class="txtbox idval clr">
                                </div>
                                <div class="col col-7">
                                    <input type="text" name="" class="txtbox descval clr">
                                    <div class="btn btn-sm-default btn-sm-default-lookup"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-5">
                                <label class="lbltxt">Request Date</label>
                            </div>
                            <div class="col col-7">
                                <input type="text" name="txtRequestDate" id="txtRequestDate" class="input clr">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-5">
                                <label class="lbltxt">Holding Expiry Date (Extended)</label>
                            </div>
                            <div class="col col-7">
                                <input type="text" name="txtHoldingExpiryDate" id="txtHoldingExpiryDate" class="input clr">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-5">
                                <label class="lbltxt">Remarks</label>
                            </div>
                            <div class="col col-7">
                                <textarea id="txtRemarks" class="txtarea noresize txtAreaRemarks clr" rows="3"></textarea>
                            </div>
                        </div>

                    </div>

                    <div class="col col-6">

                        <div class="row">
                            <div class="col col-5">
                                <label class="lbltxt">Transaction No.</label>
                            </div>
                            <div class="col col-7">
                                <input type="text" name="txtTransactionNo" id="txtTransactionNo" class="input clr" disabled="">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-5">
                                <label class="lbltxt">Record Status</label>
                            </div>
                            <div class="col col-7">
                                <input type="text" name="txtStatus" id="txtStatus" class="input clr">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-5">
                                <label class="lbltxt">Reason for Return</label>
                            </div>
                            <div class="col col-7">
                                <input type="text" name="txtReason" id="txtReason" class="input clr">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-5">
                                <label class="lbltxt">Remarks for Return</label>
                            </div>
                            <div class="col col-7">
                                <textarea id="txtReturnRemarks" class="txtarea noresize txtAreaRemarks clr" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-5">
                            </div>
                            <div class="col col-7">
                                <button type="button" class="btnOrange btnMedium nwCuzInputs fullwidth" id="btnReqCompliance" disabled="disabled" style="margin-right:0px !important;">Requirements Compliance</button>
                            </div>
                        </div>

                    </div>

                   
                </div>
            </div>

            @*Hidden Fields*@
            <div class="nwHide">
                <input type="text" style="display: none;" id="txtIsReq" disabled="" />
                <input type="text" style="display: none;" id="txtRefDocno" disabled="" />
                <input id="txtServerlink" style="display: none;" />
                <input id="txtStatusCode" style="display: none;" />
            </div>
        </div>

    </div>
</div>


@inherits System.Web.Mvc.WebViewPage
@{
    ViewBag.Title = "Request Entry";
    Layout = NoahWebLib.nwSystem.GetDefaultLayout();
}

<head>
    <script src="~/PMO/DocumentEntry/PMORequestEntry/PMORequestEntry.js"></script>
    <link href="~/PMO/DocumentEntry/PMORequestEntry/PMORequestEntry.css" rel="stylesheet" />
</head>



<div class="container-flex padding-5 cst-height">



    <div class="row">
        <div class="col col-12">
            <div class="menuitem-title">Service Entry</div>
        </div>
    </div>

    <div class="row">
        <div class="col col-12">
            <div class="cst-hrd">
                <div class="cst-hrd-wrap active" id="formTitle">Fill Out Form</div>
                <div class="cst-hrd-wrap">Summary</div>
            </div>
        </div>
    </div>


    <div class="row rx">
        <div class="col col-12">
            <div class="cst-container active">
               
                <div class="row row-parent">

                    <div class="col col-6">

                        <div class="row margin-bottom-5">
                            <div class="col col-5">
                                <label class="lbltxt">Transaction/Type of Activity<span class="nwRequiredField">*</span></label>
                            </div>
                            <div class="col col-7">
                                <select id="cmbTranAct" class="cmb fullwidth">
                                    
                                </select>
                            </div>
                        </div>

                        <div class="row margin-bottom-5">
                            <div class="col col-5">
                                <label class="lbltxt">Request<span class="nwRequiredField">*</span></label>
                            </div>
                            <div class="col col-7">
                                <select id="cmbRequest" class="cmb fullwidth">
                                    @*<option value="none" selected disabled hidden>Select Transaction</option>*@
                                </select>
                            </div>
                        </div>

                        <div class="row margin-bottom-5">
                            <div class="col col-5">
                                <label class="lbltxt">Proposed Date<span class="nwRequiredField">*</span></label>
                            </div>
                            <div class="col col-7">
                                <input type="text" class="txtbox nwDatePicker clr" id="txtPropDate" placeholder="mm/dd/yyyy">
                            </div>
                        </div>

                    </div>


                    <div class="col col-6">

                        <div class="row margin-bottom-5">
                            <div class="col col-5">
                                <label class="lbltxt">Basis for Billing</label>
                            </div>
                            <div class="col col-7">
                                <input type="text" id="txtBasisDesc" class="txtbox clr num-left" disabled="">
                            </div>
                        </div>

                        <div class="row margin-bottom-5">
                            <div class="col col-5">
                                <label class="lbltxt">No. of Consumption<span class="nwRequiredField">*</span></label>
                            </div>
                            <div class="col col-7">
                                <input type="text" id="txtNoConsumption" maxlength="12" class="txtbox clr isNumber num-left" disabled="">
                            </div>
                        </div>

                        <div class="row margin-bottom-5">
                            <div class="col col-5">
                                <label class="lbltxt">Remarks<span class="nwRequiredField">*</span></label>
                            </div>
                            <div class="col col-7">
                                <input id="txtRemarks" maxlength="500" class="txtbox clr" >
                            </div>
                        </div>

                    </div>

                </div>

                <div class="row row-parent">
                    <div class="col col-5">
                        <div class="row margin-bottom-5">
                            <div class="col col-12 cst-flex">
                              @*<div class="btn btn-default btn-default-darkblue cst">Review Attachment</div>*@
                                <div class="btn btn-default btn-default-darkblue fullwidth cst-dis" id="btnReqCompliance">Requirements Compliance</div>
                            </div>

                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-12">
                                <div class="btn btn-default fullwidth cst-dis" id="next-button">Next</div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>

            <div class="cst-container">

                <div class="row row-parent">
                    <div class="col col-4">
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Account No.</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox" id="txtAccNumber" disabled="" >
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Location</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox" id="txtLocation" disabled="">
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Unit No.</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox" id="txtUnitNo" disabled="">
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Request</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input type="text" class="txtbox" id="txtRequestDesc" disabled="">
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Proposed Date</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input type="text" class="txtbox" id="txtPropdateDesc" disabled="">
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Basis of Billing</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input type="text" class="txtbox" id="txtBasisBill" disabled="">
                            </div>
                        </div>
                    </div>

                    <div class="col col-4">
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">No of Consumption</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox isNumber" id="txtConsumptionNo" disabled="" maxlength="3" nwdp="2">
                                <input type="text" id="txtConsump" disabled="" class="nwHide clr">
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Amount</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="isNumber txtbox" id="txtAmount" disabled="" maxlength="18" nwdp="2">
                                <input type="text" id="txtSQM" disabled="" class="isNumber nwHide clr" nwdp="2">
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Vat Amount</label>
                            </div>
                            <div class="col col-7 col-mob">
                                
                                <input class="isNumber txtbox" id="txtVATAmount" maxlength="18" disabled="" nwdp="2">
                                <input type="text" id="txtVAT" disabled="" class="nwHide clr">
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">EWT Amount</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox" id="txtEWTAmount" disabled="">
                                <input type="text" id="txtCWT" disabled="" class="nwHide clr">
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">NET Amount</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox isNumber" id="txtNETAmount" disabled="" maxlength="3" nwdp="2">
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Transaction No.</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox" id="txtTranNo" disabled="">
                                <input type="text" id="txtDocno" disabled="" class="nwHide clr">
                            </div>
                        </div>

                    </div><div class="col col-4 nwHide" id="savedColumn">
                            <div class="row margin-bottom-5">
                                <div class="col col-5 col-mob">
                                    <label class="lbltxt">Transaction Date</label>
                                </div>
                                <div class="col col-7 col-mob">
                                    <input class="txtbox" id="txtTranDate" disabled="">
                                </div>
                            </div>

                        <div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Date Submitted</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox" id="txtDateSub" disabled="">
                            </div>
                        </div>
                        <div class="row margin-bottom-5 nwHide">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Date Posted</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox" id="txtDatePosted" disabled="">
                            </div>
                        </div><div class="row margin-bottom-5">
                            <div class="col col-5 col-mob">
                                <label class="lbltxt">Status</label>
                            </div>
                            <div class="col col-7 col-mob">
                                <input class="txtbox" id="txtDocStatus" disabled="">
                                <input class="txtbox nwHide" id="txtDocStatCode" disabled="">
                            </div>
                        </div>
                              <div class="row margin-bottom-5 nwHide" id="viewingRemarks">
                                  <div class="col col-5 col-mob">
                                      <label class="lbltxt">Remarks</label>
                                  </div>
                                  <div class="col col-7 col-mob">
                                      <input class="txtbox" id="txtDocRemarks" disabled="">
                                  </div>
                              </div>
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col col-5">
                        <div class="row margin-bottom-5" id="saveControlsGrp">
                            <div class="col col-12 cst-flex">
                                <div class="btn btn-default btn-default-darkblue cst" id="saveDraft-button">Save as Draft</div>
                                <div class="btn btn-default btn-default-darkblue cst" id="process-button">Process</div>
                                <div class="btn btn-default btn-default-darkblue cst nwHide" id="cancel-button">Cancel Request</div>
                            </div>
                        </div>
                        <div class="row margin-bottom-5">
                            <div class="col col-12 cst-flex">
                                <div class="btn btn-default cst btn-default-darkblue" id="back-button">Back</div>
                                <div class="btn btn-default cst btn-default-darkblue nwHide" id="okay-button">Ok</div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
<div class="container-flex ">
    <div class="row row-parent padding-10">
        <div class="col col-9 col-parent">   
            @*Date*@         
            <div class="row">
                <div class="col col-3">
                    <label class="lbltxt">Date</label>
                </div>
                <div class="col col-4">
                    <input id="txtDateToday" class="txtbox txtbox-date txtDateToday" type="text" disabled />
                </div>
                <div class="col col-5">
                    
                </div>
            </div>

            @*Body Temperature*@
            <div class="row">
                <div class="col col-3">
                    <label class="lbltxt">Body Temperature</label><span id="nwredColor">*</span>
                </div>
                <div class="col col-4">
                    <input id="txtBodyTemp" type="text" name="" class="txtbox">
                </div>
                <div class="col col-5">

                </div>
            </div>

            @*Feeling sick today?*@
            <div class="row fsMain mainButtons">
                <div class="col col-3">
                    <label class="lbltxt">Feeling sick today?</label><span id="nwredColor">*</span>
                </div>
                <div class="col col-5">
                    <div class="col col-6">
                        <div class="rdo-wrapper">
                            <input name="grp2" class="rdo" id="cbYes" type="radio" onclick="func_SickToday('Y')" />
                            <label id="lblYes" class="lbl-rdo" for="cbYes">Yes</label>
                        </div>
                    </div>
                    <div class="col col-6">
                        <div class="rdo-wrapper">
                            <input name="grp2" class="rdo nwCust1"  id="cbNo" type="radio" onclick="func_SickToday('N')" />
                            <label id="lblNo" class="lbl-rdo" for="cbNo">No</label>
                        </div>
                    </div>                
                </div>
                <div class="col col-4">

                </div>
            </div>

            @*Sickness/Symptoms*@
            <div class="row">
                <div class="col col-3">
                    <label class="lbltxt">Sickness/Symptoms</label>
                </div>

                <div class="col col-9">
                    <div class="col col-5">
                            <select id="cmbSicknessPI" class="cmb cmbFull cmbSicknessPI"></select>                       
                    </div>                   
                        <div class="col col-4">
                            <label class="lbltxt">Please Specify</label>
                        </div>

                        <div class="col col-3">
                            <input id="txtOthersSickness" class="txtFull txtbox txtOthers" type="text" />
                        </div>
                    </div>

                @*<div class="col col-1">
                </div>*@
                
            </div>
            
            @*Traveled outside your home?*@ 
            <div class="row fsMain mainButtons">
                <div class="col col-3">
                    <label class="lbltxt">Traveled outside your home?</label><span id="nwredColor">*</span>
                </div>
                <div class="col col-9">
                    <div class="col col-3">
                        <div class="rdo-wrapper">
                            <input name="grp3" class="rdo" id="cbYes1" type="radio" onclick="func_Traveled('Y')"/>
                            <label id="lblYes" class="lbl-rdo" for="cbYes1">Yes</label>
                        </div>
                    </div>
                    <div class="col col-2">
                        <div class="rdo-wrapper">
                            <input name="grp3" class="rdo nwCust1"  id="cbNo1" type="radio" onclick="func_Traveled('N')"/>
                            <label id="lblNo" class="lbl-rdo" for="cbNo1">No</label>
                        </div>
                    </div>
                    <div class="col col-4">
                        <label class="lbltxt">Please Specify Location</label>

                    </div>
                    <div class="col col-3 nwCustomCol-3">
                        <input id="txtOthersLocation" class="txtFull txtbox txtOthers" type="text" />
                    </div>                    
                </div>
                @*<div class="col col-1">

                </div>*@
            </div>

            @*With close contact*@
            <div class="row fsMain mainButtons">
                <div class="col col-3">
                    <label class="lbltxt">With close contact with positive Covid-19?</label>
                </div>
                <div class="col col-9">
                    <div class="col col-3">
                        <div class="rdo-wrapper">
                            <input name="grp4" class="rdo" id="cbYes2" type="radio" onclick="func_CloseCont('Y')"/>
                            <label id="lblYes" class="lbl-rdo" for="cbYes2">Yes</label>
                        </div>
                    </div>
                    <div class="col col-2">
                        <div class="rdo-wrapper">
                            <input name="grp4" class="rdo nwCust1"  id="cbNo2" type="radio" onclick="func_CloseCont('N')"/>
                            <label id="lblNo" class="lbl-rdo" for="cbNo2">No</label>
                        </div>
                    </div>
                    <div class="col col-4">
                        <label class="lbltxt">Please Specify Date</label>

                    </div>
                    <div class="col col-3 nwCustomCol-3">
                        @*<input id="txtOthersDate" class="txtFull txtbox txtOthers" type="text" placeholder="DD/MM/YYYY" />*@
                        <input id="txtOthersDate" class="txtbox txtbox-DATE txtOthers" @*age="txtAge"*@ type="date"/>
                    </div>
                </div>
                @*<div class="col col-1">

                </div>*@
            </div>


        </div>
        <div class="col col-3 col-parent">

        </div>
      </div>
</div>



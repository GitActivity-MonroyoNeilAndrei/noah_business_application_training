@*Journal Entries*@
<div id="nwGenerateGridJE" @*title="View Journal Entries Window"*@ class="nkPopupCon">
    <div class="nk-toolbar-c">
        <div class="nk-toolbar-btn">
            <div id="btnExportJrnl" class="btn-tb-action btn-tb-export">
                <div class="_icon"></div>
                <div class="_lbl">Export</div>
            </div>
        </div>
    </div>

    <div class="nk-container-flex padding-10">
        <div class="row-parent">
            <div class="col col-12 col-parent">
                <div id="nwGridJECon" class="fullwidth"> </div>
            </div>
        </div>
        <div class="row-parent">
            <div class="col col-12 col-parent">
                <div class="row">
                    <div class="col col-6">
                        <div class="row">
                            <div class="col col-4">
                                <label class="lbltxt">Reversal of DP/Advances Applied<span class="nwRequiredField"></span></label>
                            </div>
                            <div class="col col-8">
                                <input id="txtDPAdv" type="text" name="" class="txtbox">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-4">

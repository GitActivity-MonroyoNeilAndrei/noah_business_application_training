@inherits System.Web.Mvc.WebViewPage
@{
     ViewBag.Title = "Basic Information";
     Layout =NoahWebLib.nwSystem.GetDefaultLayout();
}

<head>
    <script src="~/PMO/ReportsAndInquiry/PMOBasicInformation/PMOBasicInformation.js"></script>
    <script src="~/PMO/ReportsAndInquiry/PMOBasicInformation/guide.js"></script>

    <link href="~/PMO/ReportsAndInquiry/PMOBasicInformation/PMOBasicInformation.css" rel="stylesheet" />
    <link href="~/materials/fonts/new/fonts.css" rel="stylesheet" />
</head>


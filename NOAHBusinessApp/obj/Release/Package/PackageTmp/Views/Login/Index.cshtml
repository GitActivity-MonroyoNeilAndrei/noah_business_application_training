@{
    Layout = null;
}
<!DOCTYPE html>
@using Microsoft.AspNet.Identity
@{
    string x_struser = User.Identity.GetUserName();
    if (Request.IsAuthenticated && x_struser != "")
    {
        Response.Redirect("home\\" + Request.Url.Query);
    }
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Welcome to @NoahWebLib.nwSystem.GetAppSettings("AppTitle", "NOAH Business Applications")</title>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#184688" />

    <link rel="shortcut icon" href="~/custom_materials/materials/system_images/ThemeImage/logo40x40.png" />
    <script src="~/materials/jslib/fpti.js"></script>
    <script src="~/materials/jslib/fptiextra.js"></script>
    <script src="~/materials/jslib/fptistyle.js"></script>
    <script src="~/materials/jslib/noahwebAAGlib.js"></script>

    <link href="~/materials/css/login.css" rel="stylesheet" />
    <link href="~/materials/css/login_materials.css" rel="stylesheet" />

    <link href="~/materials/fonts/fonts.css" rel="stylesheet" />
    <link href="~/custom_materials/materials/css/Login/Custom.css" rel="stylesheet" />


    <script type="text/javascript" src="~/materials_main/js/login.js" nonce="@NoahWebLib.NonceHelper.ScriptNonce()"></script>
</head>
<body ver="3" theme="" >

        <div id="bodyBG"></div>

        <div class="new-c">
            <div class="new-hdr">
                <div class="new-hdr_l">
                    <img src="~/custom_materials/materials/system_images/Login/logo.png" />
                </div>
                <div class="new-hdr_r">
                    <div class="Login-version"></div>
                </div>
            </div>
            <div class="new-mid">
                <div class="new-mid_l">
                    <div class="new-upper-text">
                        <div>Welcome to</div>
                        <div id="compname">@NoahWebLib.nwSystem.GetAppSettings("AppTitle")</div>
                        <div>@NoahWebLib.nwSystem.GetAppSettings("AppType")</div>
                    </div>
                    <div class="new-login-account-text" style="display: none;">Login to your account</div>
                    <div class="new-field-c">
                        <div class="comp-img">
                            @*<img src="">*@
                        </div>
                        <div class="new-comp-c new-comp-user-c">
                            <div class="new-txtlbl">Username</div>
                            <div class="new-comp-icon"></div>
                            <input type="text" name="username" autocomplete="off" checked="" class="textLogin new-txtinput" id="txtUsername" runat="server" ontextchanged="txtUsername_TextChanged" autopostback="True" placeholder="" />
                        </div>
                        <div class="new-comp-c new-comp-pass-c">
                            <div class="new-txtlbl">Password</div>
                            <div class="new-comp-icon"></div>
                            <input type="password" name="password" autocomplete="off" checked="" class="new-txtinput" id="txtPassword" runat="server" ontextchanged="txtUsername_TextChanged" autopostback="True" placeholder="" />
                        </div>

                        <div id="conPow" class="txt-cont2 hide2">
                            <label for="poweruser">Power User</label>
                            <select class="login-sel" id="poweruser">
                                <option>Test</option>
                                <option>Test</option>
                                <option>Test</option>
                            </select>
                        </div>
                        <div id="conCompany" class="txt-cont2 hide2">
                            <label for="dpCombo">Company</label>
                            <select class="login-sel" id="dpCombo">
                                <option>Test</option>
                                <option>Test</option>
                                <option>Test</option>
                            </select>
                        </div>

                        <div id="conCapcha" class="captcha-main-cont hide2">
                            <div id="captcha-cont" class="">
                                <span>Please enter the text from the image</span>
                                <span>
                                    <img src="" id="captcha-img" />
                                </span>
                                <input type="text" name="" autocomplete="off" checked="" class="textLogin" id="txtCaptcha" runat="server" ontextchanged="" autopostback="True" placeholder="Enter text" />
                            </div>
                        </div>

                        <div id="conMessage">
                            <div class="nwRed">
                                <span id="errrormess"></span>
                            </div>
                        </div>

                        <button id="Button1" class="">Login</button>
                        <div class="fx-container-new">
                            <a id="forgotpass" href="ForgotPassword.aspx">Forgot password?</a>
                            <div id="registrationpass">Don't have an account? <span class="regsitrationpass-color">Sign up here</span></div>
                        </div>
                        <br>
                        @{ 
                            string LoginRegisterShow = NoahWebLib.nwSystem.GetAppSettings("LoginRegisterShow");
                            string LoginRegisterText = NoahWebLib.nwSystem.GetAppSettings("LoginRegisterText");
                            string LoginRegisterLink = NoahWebLib.nwSystem.GetAppSettings("LoginRegisterLink");

                            if (LoginRegisterShow == "1")
                            {

                               <div class="registercon"><a id='register' href='@LoginRegisterLink'>@LoginRegisterText</a></div>
                            }
                       }
    

                    </div>
                </div>

   

                <div class="new-mid_r">
                    <div class="new-big-img">
                        <img id="img_primary" src="~/custom_materials/materials/system_images/Login/MALE.png" alt="NOAH" />
                        <img id="img_secondary" src="~/custom_materials/materials/system_images/Login/FEMALE.png" alt="NOAH" />
                    </div>
                    <div id="typeWriterFx1" class="new-login-text-c"> </div>
                </div>
            </div>
        </div>


        <div id="annContainer" style="display:none;">
          
            <!--<div id="welcometext">Welcome to <span>NOAH</span></div>-->
            <div id="welcometext">Aboitiz Land, Inc.s</div>
            <!--<div id="contenttext">login to access your account</div>-->
            <div id="contenttext">Aboitiz Land, Inc.s can adapt and integrate with current IT infrastructure, data, and resources of a company thereby greatly enhancing business processes.</div>
            <span class="rounded-div" id="rd-big-left1"></span>
            <span class="rounded-div" id="rd-small-left1"></span>
        </div>

        <!-- Button for Announcement (Mobile View) -->
        <div id="btnTopNav">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>

        <!-- Popup message notification -->
        <div id="popValidating" class="pop-msg-cont hide">
            <div class="pop-msg-box2">
                <span></span>
                <span></span>
                <span></span>

                <div class="b-box">
                    <span id="b-ball1" class="b-ball"></span>
                    <span id="b-ball2" class="b-ball"></span>
                    <span id="ld-text">NOAH is validating..</span>
                </div>


                <div></div>
            </div>
        </div>
        <div class="pop-msg-cont hide" style="">
            <div class="pop-msg-box">
                <span></span>
                <span class="pop-x">
                    <span></span>
                    <span></span>
                </span>
                <span class="pop-top-label">System Message</span>
                <div></div>
            </div>
        </div>

        <div class="shapes-cont" id="shapes-cont-body">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>


</body>
</html>
